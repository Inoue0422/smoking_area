<%= render "shared/header" %>

<main class="form-signin w-100 m-auto"style="padding-bottom: 100px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="custom-error-messages">
      <%= devise_error_messages! %>
    </div>

    <img class="mb-4" src="/smoking2.jpg" alt="" width="90" height="90">
    <h1 class="h3 mb-3 fw-normal fst-italic">新規登録</h1>

    <div class="form-floating">
      <%= f.text_field :nickname, autofocus: true, class: 'form-control', id: 'floatingNickname', placeholder: 'Nick name'%>
      <label for="floatingNickname">ニックネーム</label>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, class: 'form-control', id: 'floatingInput', placeholder: 'Email address'%>
      <label for="floatingInput">メールアドレス</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: 'Password'%>
      <label for="floatingPassword">パスワード</label>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'floatingPasswordConfirmation', placeholder: 'Confirm Password'%>
      <label for="floatingPasswordConfirmation">パスワード（確認用）</label>
    </div>

    <%# <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div> %>

    <button class="btn btn-secondary w-100 py-2 mt-5" type="submit">新規登録</button>
  <% end %>

</main>

<%= render "shared/footer" %>