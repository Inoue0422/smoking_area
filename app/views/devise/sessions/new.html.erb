<%= render "shared/header" %>

<body class="sign-in-page" style="padding-bottom: 120px;">
  <main class="form-signin w-100 m-auto">
    <div class='login-flash-message custom-error-messages'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <img class="mb-4" src="/smoking2.jpg" alt="" width="90" height="90">
      <h1 class="h3 mb-3 fw-normal fst-italic">ログイン</h1>

      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: 'Email address'%>
        <%= f.label :email, 'メールアドレス', class: 'floatingInput' %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'floatingPassword', placeholder: 'Password' %>
        <%= f.label :password, 'パスワード', class: 'floatingPassword' %>
      </div>

      <%# <div class="form-check text-start my-3"> %>
        <%# <%= f.check_box :remember_me, class: 'form-check-input', id: 'flexCheckDefault' %>
        <%# <%= f.label :remember_me, 'Remember me', class: 'form-check-label', for: 'flexCheckDefault' %>
      <%# </div> %>

      <div class="actions mt-5">
        <%= f.submit "ログイン", class: 'btn btn-secondary w-100 py-2' %>
      </div>

    <% end %>

    <div class='text-center'>
      <%#= render "shared/links" %>
    </div>

  </main>
</body>

<%= render "shared/footer" %>