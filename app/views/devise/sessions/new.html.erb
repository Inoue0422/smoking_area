<%= render "shared/header" %>

<body class="sign-in-page">
  <main class="form-signin w-100 m-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <img class="mb-4" src="/24211327.jpg" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'floatingInput', placeholder: 'Email address'%>
        <%= f.label :email, 'Email address', class: 'floatingInput' %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'floatingPassword', placeholder: 'Password' %>
        <%= f.label :password, 'Password', class: 'floatingPassword' %>
      </div>

      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class: 'form-check-input', id: 'flexCheckDefault' %>
        <%= f.label :remember_me, 'Remember me', class: 'form-check-label', for: 'flexCheckDefault' %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-danger w-100 py-2' %>
      </div>

      <p class="mt-5 mb-3 text-body-secondary">&copy; 2017â€“2023</p>
    <% end %>

    <%= render "shared/links" %>
  </main>
</body>

<%= render "shared/footer" %>